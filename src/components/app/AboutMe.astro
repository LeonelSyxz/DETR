---
const cards = [
  {
    title: "Brand Design",
    icon: "fa-bullhorn",
    desc: "Diseño de marcas con enfoque estratégico en identidad visual y narrativa.",
  },
  {
    title: "UI/UX Design",
    icon: "fa-paint-brush",
    desc: "Interfaces intuitivas que conectan con el usuario y maximizan la experiencia.",
  },
  {
    title: "Web Development",
    icon: "fa-code",
    desc: "Desarrollo de sitios web modernos, responsivos y orientados a resultados.",
  },
  {
    title: "Educación",
    icon: "fa-graduation-cap",
    desc: "Lic. en Ciencias de la Comunicación, Universidad Autónoma de Tamaulipas (2019 - 2023).",
  },
  {
    title: "Software y Herramientas",
    icon: "fa-laptop-code",
    desc: "Adobe Suite, Figma, WordPress, Google Ads, Meta Ads, HTML, CSS, JavaScript.",
  },
  {
    title: "Certificaciones",
    icon: "fa-certificate",
    desc: "Google Ads, Facebook Blueprint, Cert. Marketing Digital UAT.",
  },
];
---

<section
  class="relative h-full px-4 sm:px-6 md:px-8 py-20 sm:py-24 bg-gradient-to-tr from-primary-100 via-white to-primary-200 text-center overflow-hidden"
>
  <h2
    class="text-4xl sm:text-5xl font-extrabold text-primary-900 mb-6 animate-fade-up"
  >
    About Me
  </h2>
  <p
    class="text-lg sm:text-xl text-primary-700 max-w-3xl mx-auto mb-12 animate-fade-up animate-delay-300"
  >
    Convierto ideas en estrategias de marketing que conectan, inspiran y generan
    impacto real.
  </p>

  <div
    class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto items-start"
  >
    <!-- Columna Izquierda -->
    <div class="space-y-6 animate-fade-up animate-delay-500">
      {
        cards.slice(0, 3).map((card) => (
          <div class="bg-white rounded-2xl p-4 shadow-lg flex items-start gap-4 hover:shadow-xl transition">
            <i class={`fas ${card.icon} text-xl text-primary-600 mt-1`} />
            <div>
              <h4 class="font-semibold text-primary-900">{card.title}</h4>
              <p class="text-sm text-primary-700">{card.desc}</p>
            </div>
          </div>
        ))
      }
    </div>

    <!-- Centro: Avatar + Datos -->
    <div
      class="flex flex-col items-center gap-4 animate-fade-up animate-delay-700 relative"
    >
      <div
        class="w-48 h-48 rounded-full overflow-hidden border-4 border-primary-500 shadow-xl"
      >
        <img
          src="https://i.pinimg.com/736x/22/ca/03/22ca03ec82583f806a7d645d77789b16.jpg"
          alt="Diego Eduardo"
          class="w-full h-full object-cover"
        />
      </div>
      <div class="text-center mt-2">
        <h3 class="text-xl font-bold text-primary-900">
          Diego Eduardo Téllez Reséndiz
        </h3>
        <span
          class="inline-block bg-primary-600 text-white px-3 py-1 text-xs rounded-full mt-1 shadow"
        >
          Freelancer · Marketing Digital
        </span>
        <p class="text-sm text-primary-700 mt-2">Tamaulipas, México</p>
        <p class="text-sm text-primary-700">Nacido: 04 / 10 / 2001</p>
      </div>

      <!-- Contactos -->
      <div class="flex gap-3 mt-4 flex-wrap justify-center">
        <a
          href="tel:+528331815421"
          class="bg-primary-600 hover:bg-primary-700 text-white p-3 rounded-full shadow-md transition"
        >
          <i class="fa-solid fa-phone"></i>
        </a>
        <a
          href="mailto:diegoeduardo@gmail.com"
          class="bg-primary-600 hover:bg-primary-700 text-white p-3 rounded-full shadow-md transition"
        >
          <i class="fa-solid fa-envelope"></i>
        </a>
        <a
          href="https://wa.me/5218331815421"
          target="_blank"
          class="bg-green-500 hover:bg-green-600 text-white p-3 rounded-full shadow-md transition animate-pulse"
        >
          <i class="fab fa-whatsapp"></i>
        </a>
      </div>
    </div>

    <!-- Columna Derecha -->
    <div class="space-y-6 animate-fade-up animate-delay-500">
      {
        cards.slice(3).map((card) => (
          <div class="bg-white rounded-2xl p-4 shadow-lg flex items-start gap-4 hover:shadow-xl transition">
            <i class={`fas ${card.icon} text-xl text-primary-600 mt-1`} />
            <div>
              <h4 class="font-semibold text-primary-900">{card.title}</h4>
              <p class="text-sm text-primary-700">{card.desc}</p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
